# Application Configuration
APP_NAME="Agentic Career Mentor API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000

# Anthropic Claude API
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
ANTHROPIC_MODEL="claude-haiku-4-5-20251001" #claude-sonnet-4-5-20250929

# Voyage AI Embeddings
VOYAGE_API_KEY="your_voyage_api_key_here"
VOYAGE_MODEL="voyage-3.5"

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/career_mentor_db"

# Alternative: SQLite (uncomment if not using Postgres)
# DATABASE_URL="sqlite:///./career_mentor.db"

# Google Gemini API
GOOGLE_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-pro"  # Options: gemini-pro, gemini-pro-flash

# LangSmith (Optional - for debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=""
LANGCHAIN_PROJECT="career-mentor"

# Memory & Vector Store
VECTOR_DIMENSION=768
MEMORY_SIMILARITY_THRESHOLD=0.7

# Agent Configuration
MAX_ITERATIONS=15
CHECKPOINT_ENABLED=True

# Job Market Data (Optional APIs)
# RAPIDAPI_KEY=""  # For job market data APIs
# GITHUB_TOKEN=""  # For tech trend analysis

# CORS
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Logging
LOG_LEVEL="INFO"
